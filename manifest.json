{
    "manifest_version": 2,
    "name": "Annotations Restored for YouTube™",
    "short_name": "Annotations Restored",
    "version": "0.0.5",

    "description": "Brings annotation support back to YouTube™!",

    "permissions": [
        "tabs",
		"https://invidio.us/api/v1/annotations/*",
		"https://gist.githubusercontent.com/*/raw/*",
        "https://pastebin.com/raw/*"
    ],
    "browser_action": {
        "default_title": "Annotations Restored",
        "default_popup": "popup/index.html"
    },

    "content_scripts": [{
        "matches": ["*://www.youtube.com/watch?*"],
        "js": ["js/annotationlib/dist/AnnotationParser.js", "js/annotationlib/dist/AnnotationRenderer.js", "js/content.js"],
        "css": ["js/annotationlib/dist/AnnotationRenderer.css"]
    }],
    "background": {
        "scripts":["js/background.js"]
    }
}